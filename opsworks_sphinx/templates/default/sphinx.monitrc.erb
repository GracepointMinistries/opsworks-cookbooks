check process sphinx_<%= @application %>_9312
  with pidfile /var/run/sphinxsearch/searchd.pid
  start program = "/srv/www/<%= @application %>/shared/scripts/thinking_sphinx_searchd <%= @application %> start <%= @env %>" as uid <%= @user %> with timeout 90 seconds
  stop program = "/srv/www/<%= @application %>/shared/scripts/thinking_sphinx_searchd <%= @application %> stop <%= @env %>" as uid <%= @user %> with timeout 90 seconds
  group sphinx_<%= @application %>
