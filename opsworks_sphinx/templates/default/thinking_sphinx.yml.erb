<%= @environment %>:  
  log: /var/log/sphinxsearch/<%= @application %>/searchd.log
  query_log: /var/log/sphinxsearch/<%= @application %>/query.log
  pid_file: /var/run/sphinxsearch/searchd.pid
  address: <%= @address %>
  mysql41: 9312
  mem_limit: <%= @mem_limit %>
  configuration_file: <%= @release_path %>/config/sphinx/<%= @environment %>.sphinx.conf
  indices_location: /data/sphinx/<%= @application %>/indexes

